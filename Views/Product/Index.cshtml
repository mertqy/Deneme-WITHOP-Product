@using EntityLayer.Concrete

@model List<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UiLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Fiyat</th>
        <th>Stok</th>
        <th></th>
        <th></th>
    </tr>
    @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stok</td>
            <td><a href="#" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success">Değiştir</a></td>
        </tr>
        }
</table>
<a href="/Product/AddProduct" class="btn btn-info">Yeni Ürün Ekle</a>